<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
			
	<head>
		<title> Liste des utilisateurs </title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/baquaras/css/form_appli.css') }}" type="text/css"/>
			<link rel="stylesheet" href="{{ asset('bundles/baquaras/css/menu_connecte.css') }}" type="text/css"/>
			<link rel="stylesheet" href="{{ asset('bundles/baquaras/css/page.css') }}" type="text/css"/>
                        <link rel="stylesheet" href="{{ asset('bundles/baquaras/css/theme.default.css') }}" type="text/css"/>
		{% endblock %} 
      
                <script type="text/javascript" src="{{ asset('bundles/baquarastest/js/jquery-latest.min.js') }}"></script>
                <script type="text/javascript" src="{{ asset('bundles/baquarastest/js/jquery.tablesorter.min.js') }}"></script>

	</head>
	
        <body>
            
                    <table id="liste" class="tablesorter">
                        <thead>
                            <tr id="tr1">
                                <td> Prénom </td>
                                <td> Nom </td>
                                <td> Compte matriculaire </td>
                                <td> Mail </td>
                                <td> Profil(s) </td>
                                <td> Actions </td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for utilisateur in utilisateurs %}
                                <tr id="trimpair">
                                    <td> {{ utilisateur.prenom }} </td>
                                    <td> {{ utilisateur.nom }} </td>
                                    <td> {{ utilisateur.cpteMatriculaire }} </td>
                                    <td> {{ utilisateur.mail }} </td>
                                    <td> {{ utilisateur.profil1 }} {% if utilisateur.profil2 is not null %}, {{ utilisateur.profil2 }} {% endif %} </td>
                                    <td> 
                                        <a href="{{path('modifierUser', {'userId': utilisateur.id }) }}"> Modifier cet utilisateur </a> <br/>
                                        <a href="{{path('supprimerUser', {'userId': utilisateur.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')"> Supprimer cet utilisateur </a>
                                    </td>
                                </tr>	
                            {% endfor %}
                        </tbody>

                    </table>
                    {% if pager.haveToPaginate %}
                        <div class="pagination pagination-centered">
                            <ul>
                                <li>
                                    {{ pagerfanta(pager, 'default_translated') }}
                                </li>


                            </ul>
                        </div>
                    {% endif %}
                    <script>
                    $(function() {
                    // call the tablesorter plugin
                    $("table").tablesorter({
                      // initialize zebra striping of the table
                       widgets : ['zebra', 'columns'],
                       sortInitialOrder: "asc"
                        });
                    });
                    </script>

        </body>
</html>