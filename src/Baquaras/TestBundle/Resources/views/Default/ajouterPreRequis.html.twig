<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>

	<head>
		<title> Ajout d'un pré-requis </title>
		{% include 'BaquarasTestBundle:Default:css.html.twig' %}
	</head>
    
	<body>
		
		{% include 'BaquarasTestBundle:Default:menu.html.twig' %} 
			
		<div id="page">
		
			<h1> Ajout d'un pré-requis </h1>
			
			{### Zone d'affichage des messages/annotations ###}
			<div id="flashbag"> 
				{% for flashMessage in app.session.flashbag.get('notice') %}
					<div id="img"> </div>
					<div id="texte"> {{ flashMessage }} </div> <br/>
				{% endfor %}
			</div>
			
			<form  action="{{ path('ajouterPreRequis', {'applicationId': application.id }) }}" method="post" {{ form_enctype(form) }} class="ajouterprerequis" novalidate="novalidate">
		
			{{ form_start(form) }}
			
			<table>
				
				<tr> 
					<td> </td>
					<td id="errors"> {{ form_errors(form) }} </td>
				</tr>
				<tr>
					<td id="label"> {{ form_label(form.libelle) }} </td>
					<td id="text"> {{ form_widget(form.libelle) }} </td> </tr> <tr> <td> </td>
					<td id="errors"> {{ form_errors(form.libelle) }} </td>
				</tr>
				<tr>
					<td id="label"> {{ form_label(form.commentaire) }} </td>
					<td id="text"> {{ form_widget(form.commentaire) }} </td> </tr> <tr> <td> </td>
					<td id="errors"> {{ form_errors(form.commentaire) }} </td>
				</tr>
				<tr>
					<td id="label"> {{ form_label(form.modeGestion) }} </td>
					<td id="text"> {{ form_widget(form.modeGestion) }} </td> </tr> <tr> <td> </td>
					<td id="errors"> {{ form_errors(form.modeGestion) }} </td>
				</tr>
				<tr>
					<td id="label"> {{ form_label(form.oscible) }} </td>
					<td id="text"> {{ form_widget(form.oscible) }} </td> </tr> <tr> <td> </td>
					<td id="errors"> {{ form_errors(form.oscible) }} </td>
				</tr>					
				<tr> 
					<td class="annuler"></td>
					<td class="valider"> {{ form_widget(form.save) }}  <button type="button" value="Annuler" onclick="window.location.href='{{path('modifierApplication', {'id': application.id }) }}'"> Annuler </button> </td>
				</tr>
				<tr> 
					<td> {{ form_rest(form) }} </td>
				</tr>
			
			</table>
			
			{{ form_widget(form.save) }}
			
			{{ form_end(form) }}

			</form>
		
		</div>
		
    </body>
</html>